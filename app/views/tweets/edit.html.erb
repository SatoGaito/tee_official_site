<div class="container"> 
  <div class="row">
    <%= render 'shared/tweet_error_messages' %>
    
    <div class="tweet-new has-shadow-1 w-100 mt-4">
      <div class="form-header text-center pt-4 pb-4">
        <h2 class="mb-0">ツイート</h2>
      </div>

      <div class="form-body">
        <%= form_for @tweet do |f| %>

          <div class="field">
            <%= f.text_area :tweet, autofocus: true, placeholder: "つぶやき", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.submit "更新", class: "btn btn-lg btn-block btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>