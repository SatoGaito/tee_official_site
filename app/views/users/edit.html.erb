<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true %>

  <%= f.label :nickname %>
  <%= f.text_field :nickname, autofocus: true %>

  <%= f.label :gender %>
  <%= f.radio_button :gender, "男" %>男
  <%= f.radio_button :gender, "女" %>女

  <%= f.label :college %>
  <%= f.text_field :college, autofocus: true %>

  <%= f.label :grade %>
  <%= f.number_field :grade, min: 1, max: 4, autofocus: true %>

  <%= f.label :profile_image %>
  <%= f.attachment_field :profile_image %>
  
  <%= f.label :introduction %>
  <%= f.text_area :introduction, autofocus: true %>

  <%= f.submit "保存" %>
<% end %>