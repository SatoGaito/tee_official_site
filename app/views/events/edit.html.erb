<div class="row">
  <%= render 'layouts/event_error_messages' %>
  <div class="event-new has-shadow-1 w-100 mt-4">
    <div class="form-header text-center pt-4 pb-4">
      <h2 class="mb-0">活動編集</h2>
    </div>
    <div class="form-body">
      <%= form_for @event do |f| %>

        <div class="field">
          <%= f.text_field :title, autofocus: true, placeholder: "タイトル", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.date_field :date, autofocus: true, class: "form-control"%>
        </div>

        <div class="field">
          <%= f.text_area :content, autofocus: true, placeholder: "内容", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :event_image, "集合写真：" %>
          <%= f.attachment_field :event_image %>
        </div>

        <div class="field">
        <%= f.submit "更新", class: "btn btn-lg btn-block btn-warning" %>
        </div>
      <% end %>
    </div>
  </div>
</div>