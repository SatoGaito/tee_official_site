<div class="row">

    <% if user_signed_in? && current_user.admin? %>
      <%= link_to '投稿', new_event_path, class: "btn btn-sm btn-outline-warning mr-auto ml-auto" %>
    <% end %>

  <div class="event-index mt-4 w-100">
    <% @events.each do |event| %>
      <div class="mb-4 event-box">
        <div class="event-btn">
          <a class="btn btn-warning btn-lg btn-block d-flex justify-content-between align-items-center" data-toggle="collapse" href="#collapseExample<%= event.id %>" role="button" aria-expanded="false" aria-controls="collapseExample">
            <%= event.title %>
            <span class="event-head">
              <%= event.date %>
            </span>
          </a>
        </div>
        <div class="collapse acd-content mt-2 text-center has-shadow-1" id="collapseExample<%= event.id %>">
          <div>
            <% if event.e_image.attached? %>
              <%= image_tag event.e_image %>
            <% end %>
          </div>
          <div class="d-flex align-items-center mt-2">
            <%= link_to "活動詳細", event_path(event), class: "btn btn-sm col-6 btn-outline-warning tc-5" %>
            <div class="col-6 text-center"><%= "コメント#{event.event_comments.count}件" %></div>
          </div>
        </div>
        
      </div>
    <% end %>
  </div>
</div>
