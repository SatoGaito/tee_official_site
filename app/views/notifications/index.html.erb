<div class="container bg-light">  
  <div class="row">
    <% notifications = @notifications.where.not(visitor_id: current_user.id) %>
    <% if notifications.exists? %>
      <%= render notifications %>
      <div class="kaminari mt-4">
        <%= paginate notifications, window: 2 %>
      </div>
    <% else %>
      <h4>通知はありません</h4>
    <% end %>
  </div>
</div>